<div class="lrdk-dialog-content">
  <h2>{{ talent.name }} ({{ talent.value }})</h2>
  <section class="lrdk-dialog-modifiers">
    <div class="lrdk-dialog-modifier">
      <label
        for="lrdk-dialog-modifier-difficulty"
        >{{ localize 'LRDK.Global.difficulty' }}</label
      >
      <select id="lrdk-dialog-modifier-difficulty" name="difficulty">
        {{#each difficultyLevels as |difficulty|}}
        <option value="{{ difficulty.value }}">
          {{ localize (concat 'LRDK.Dialog.difficulty.' difficulty.label) }}
          ({{ difficulty.value }})
        </option>
        {{/each}}
      </select>
    </div>
  </section>
</div>
<div class="dialog-buttons">
  {{#each buttons as |button id|}}

  <button
    class="dialog-button {{ cssClass }}"
    data-button="{{ id }}"
    {{disabled
    button.disabled}}
  >
    {{{button.icon}}} {{{button.label}}}
  </button>
  {{/each}}
</div>
